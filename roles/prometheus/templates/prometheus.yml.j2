global:
  scrape_interval: 15s
  evaluation_interval: 30s

rule_files:
- /etc/prometheus/alert-rules.yml

scrape_configs:
- job_name: node
  file_sd_configs:
    - files:
        - /etc/prometheus/targets.json

alerting:
  alertmanagers:
  - static_configs:
      - targets:
        - 'localhost:9093' # Alertmanager is running locally on this host
